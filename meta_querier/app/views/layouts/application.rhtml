<html>
<head>
<title>Meta Querier</title>
    <%= javascript_include_tag :defaults %>
    <%= stylesheet_link_tag 'meta_rails/meta_querier', :media => 'all' %>
</head>
<body>
<div class="meta-querier">
<h1>Meta Querier</h1>
<% form_tag :action => params[:action] do -%>
<%= link_to "Meta Scaffold", :controller => "/meta_scaffold_info" if File.exists?("#{RAILS_ROOT}/app/controllers/meta_scaffold_info_controller.rb") %> |
<%= link_to_remote( "Clear Models Images Cache", :update => "notification-div", :url => { :action => :clear_models_images_cache }, :confirm => "This will erase all the cache, forcing the reload of all Models Images.\n Are you sure?" ) %> |

<% end -%>
<br/><br/>
</div>

<div id="notification-div" style="color: green"><%= flash[:notice] %><br/></div>

<div id="query-builder-div" class="meta-querier">
<%= @content_for_layout %>
</div>

<div id="notification" style="display: none;"><img src="/images/meta_rails/ajax_indicator.gif" width="16" height="16" align="absmiddle">&nbsp;Working...</div>
</body>
</html>