digraph G {
  bgcolor = "transparent"
  color = black
  
  node [
    shape = "record"
    style = "filled"
    color = "black"
    fillcolor = "#f1ffe8"
    fontname = "Verdana"
    fontsize = 9
  ]

<% if actual_model %>
  <%= actual_model %> [
    shape = "record"
    style = "filled"
    color = "black"
    fillcolor = "green"
    fontname = "Verdana"
    fontsize = 11    
  ]
<% end %>
  
  graph [
    fontname = "Verdana"
    fontsize = 14
    style = "filled"
    fillcolor = "#eeeeee"
    labelfontsize = 5
  ]

  <% if options[:models] %>
    subgraph cluster_models {
      label = "Models"
      

      <% models.each do |model| %>

        <% unless model_columns(model).empty? %>
          "<%= model %>" [
            <% rows = model_columns(model).collect { |name, type| "<#{name}> #{name} (#{type})" } %>
            label = "{ <%= model %> | <%= rows.join(' | ') %> }"
          ]
        <% else %>
          "<%= model %>" [
            label = "<%= model %>"
          ]
        <% end %>

        <% unless model_associations(model).empty? %>
          <% model_associations(model).keys.each do |assoc| %>
            <% unless model_associations(model)[assoc] == "belongs_to" %>
              <% to = assoc.classify %>
              "<%= model %>" -> "<%= to %>" [ label = "<%= assoc.humanize.downcase %>" ];
            <% end %>
          <% end %>
        <% end %>

      <% end %>
    }
  <% end %>

}
